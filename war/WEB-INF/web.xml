<?xml version="1.0" encoding="utf-8"?>
<web-app
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
    version="2.5">
    <servlet>
        <servlet-name>rawPanoServlet</servlet-name>
        <servlet-class>net.sourcewalker.kugeln.RawPanoramaServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>rawPanoServlet</servlet-name>
        <url-pattern>/pano/raw</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>thumbnailServlet</servlet-name>
        <servlet-class>net.sourcewalker.kugeln.ThumbnailServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>thumbnailServlet</servlet-name>
        <url-pattern>/pano/thumbnail</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>tileServlet</servlet-name>
        <servlet-class>net.sourcewalker.kugeln.TileServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>tileServlet</servlet-name>
        <url-pattern>/pano/tile</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>processingServlet</servlet-name>
        <servlet-class>net.sourcewalker.kugeln.ProcessingServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>processingServlet</servlet-name>
        <url-pattern>/pano/process</url-pattern>
    </servlet-mapping>
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Processing Servlet</web-resource-name>
            <url-pattern>/pano/process</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

    <servlet>
        <servlet-name>panoramaService</servlet-name>
        <servlet-class>net.sourcewalker.kugeln.gwt.dashboard.server.PanoramaServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>panoramaService</servlet-name>
        <url-pattern>/dashboard/panoramas</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>userInfoService</servlet-name>
        <servlet-class>net.sourcewalker.kugeln.gwt.dashboard.server.UserInfoServiceImpl</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>userInfoService</servlet-name>
        <url-pattern>/dashboard/userInfo</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
